<div class="d-flex flex-column align-items-center w-100 gap-1">

<h2>Log in</h2>

<%=form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-label w-100">
    <%= f.label :email %><br />
    <input class="w-100" <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-label w-100">
    <%= f.label :password %><br />
    <input class="w-100" <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
    <input class="w-100" <%= f.check_box :remember_me %>
       <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions pt-2 d-flex justify-content-center w-100">
    <%= f.submit "Log in", class: "btn btn-primary w-75" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>